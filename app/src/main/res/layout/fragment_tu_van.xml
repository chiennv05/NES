<!-- fragment_tu_van.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavFarg.FragTuVan"
    android:layout_marginTop="25dp"
    android:background="@drawable/maumenu">

    <Button
        android:id="@+id/btnHealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tư vấn sức khỏe"
        android:backgroundTint="#FA9523"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnNutrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tư vấn dinh dưỡng"
        app:layout_constraintTop_toBottomOf="@+id/btnHealth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:backgroundTint="#FA9523"/>

    <Button
        android:id="@+id/btnExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tư vấn thể dục"
        app:layout_constraintTop_toBottomOf="@+id/btnNutrition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:backgroundTint="#FA9523"/>

    <Button
        android:id="@+id/btnPsychology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tư vấn tâm lý"
        app:layout_constraintTop_toBottomOf="@+id/btnExercise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:backgroundTint="#FA9523"/>

    <Button
        android:id="@+id/btnFinance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tư vấn tài chính"
        app:layout_constraintTop_toBottomOf="@+id/btnPsychology"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:backgroundTint="#FA9523"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResponses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFinance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
